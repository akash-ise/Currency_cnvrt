<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/cnb"
    tools:context="com.example.akash.currency.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Indian Rupees :"
        android:textColor="#bbdefb"
        android:textSize="22dp"
        android:id="@+id/textView"
        android:layout_marginTop="77dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inred"
        android:inputType="number"
        android:textSize="20dp"
        android:hint="INR"
        android:gravity="center"
        android:layout_alignTop="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:layout_marginLeft="58dp"
        android:layout_marginStart="58dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#e8d4d4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#bbdefb"
        android:textSize="22dp"
        android:text="Doller :"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usded"
        android:inputType="number"
        android:textSize="20dp"
        android:hint="USD"
        android:gravity="center"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/inred"
        android:layout_alignEnd="@+id/inred"
        android:layout_alignLeft="@+id/inred"
        android:layout_alignStart="@+id/inred"
        android:background="#e8d4d4" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup">

    </RadioGroup>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Convert"
        android:id="@+id/btn"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_alignLeft="@+id/usded"
        android:layout_alignStart="@+id/usded"
        android:layout_alignRight="@+id/usded"
        android:layout_alignEnd="@+id/usded" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#bbdefb"
        android:textSize="20dp"
        android:text="  Intelligent Students of Engineering"
        android:id="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
